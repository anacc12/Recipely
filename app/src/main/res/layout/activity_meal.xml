<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/meal_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:paddingBottom="15dp">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/meal_img"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:alpha="0.3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/meal_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        android:id="@+id/meal_text"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_corners"
        />
    <ImageButton
        android:id="@+id/back_btn_meal"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/back_button"
        />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/scroll"
    app:layout_constraintTop_toBottomOf="@+id/meal_text"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2dp"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:scrollbars="none"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
