<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_layout">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/meal_img"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:alpha="0.3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/meal_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        android:id="@+id/meal_text"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_corners"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scroll"
        app:layout_constraintTop_toBottomOf="@+id/meal_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:scrollbars="none"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_card"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="27dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="3dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/meal_ingredients"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/dark_font"
                        android:text="@string/ingredients"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:alpha="0.65"
                        />
                    <ImageView
                        android:id="@+id/underline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="-20dp"
                        app:layout_constraintTop_toBottomOf="@+id/meal_ingredients"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:alpha="0.3"
                        />
                    <TextView
                        android:id="@+id/ingr_1"
                        app:layout_constraintTop_toBottomOf="@id/underline"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/light"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_2"
                        app:layout_constraintTop_toBottomOf="@id/ingr_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_3"
                        app:layout_constraintTop_toBottomOf="@id/ingr_2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_4"
                        app:layout_constraintTop_toBottomOf="@id/ingr_3"
