                        android:id="@+id/ingr_13"
                        app:layout_constraintTop_toBottomOf="@id/ingr_12"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_14"
                        app:layout_constraintTop_toBottomOf="@id/ingr_13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_15"
                        app:layout_constraintTop_toBottomOf="@id/ingr_14"
