                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_6"
                        app:layout_constraintTop_toBottomOf="@id/ingr_5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_7"
                        app:layout_constraintTop_toBottomOf="@id/ingr_6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_8"
                        app:layout_constraintTop_toBottomOf="@id/ingr_7"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_9"
                        app:layout_constraintTop_toBottomOf="@id/ingr_8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_10"
                        app:layout_constraintTop_toBottomOf="@id/ingr_9"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_11"
                        app:layout_constraintTop_toBottomOf="@id/ingr_10"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_12"
                        app:layout_constraintTop_toBottomOf="@id/ingr_11"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
