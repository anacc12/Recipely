                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ingr_20"
                        app:layout_constraintTop_toBottomOf="@id/ingr_19"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/light"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_1"
                        app:layout_constraintTop_toBottomOf="@id/underline"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_2"
                        app:layout_constraintTop_toBottomOf="@id/am_1"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_3"
                        app:layout_constraintTop_toBottomOf="@id/am_2"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_4"
                        app:layout_constraintTop_toBottomOf="@id/am_3"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_5"
                        app:layout_constraintTop_toBottomOf="@id/am_4"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_6"
                        app:layout_constraintTop_toBottomOf="@id/am_5"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_7"
                        app:layout_constraintTop_toBottomOf="@id/am_6"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_8"
                        app:layout_constraintTop_toBottomOf="@id/am_7"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_9"
                        android:fontFamily="@font/light"
                        app:layout_constraintTop_toBottomOf="@id/am_8"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_10"
                        app:layout_constraintTop_toBottomOf="@id/am_9"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_11"
                        app:layout_constraintTop_toBottomOf="@id/am_10"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_12"
                        app:layout_constraintTop_toBottomOf="@id/am_11"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_13"
                        app:layout_constraintTop_toBottomOf="@id/am_12"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_14"
                        app:layout_constraintTop_toBottomOf="@id/am_13"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_15"
                        app:layout_constraintTop_toBottomOf="@id/am_14"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_16"
                        app:layout_constraintTop_toBottomOf="@id/am_15"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_17"
                        app:layout_constraintTop_toBottomOf="@id/am_16"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_18"
                        app:layout_constraintTop_toBottomOf="@id/am_17"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_19"
                        app:layout_constraintTop_toBottomOf="@id/am_18"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/am_20"
                        app:layout_constraintTop_toBottomOf="@id/am_19"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/light"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instructions_card"
                app:layout_constraintTop_toBottomOf="@id/ingredients_card"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                >

                <TextView
                    android:id="@+id/meal_instructions"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/dark_font"
                    android:text="@string/instructions"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:alpha="0.65"
                    />
                <ImageView
                    android:id="@+id/underline_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/meal_instructions"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:alpha="0.3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/in_tv"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/underline_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constrainedWidth="true"
                    android:paddingStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/light"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/instructions_card"
                android:gravity="center">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:id="@+id/yt_btn"
                    android:background="@drawable/yt_btn"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="13dp"
                    />
                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:id="@+id/src_btn"
                    android:background="@drawable/src_btn"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="13dp"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>